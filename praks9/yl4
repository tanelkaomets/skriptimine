#!/bin/bash
# P체ramiid

echo -n "Sisesta ridade arv: "
read rida
for (( a=1; a<=$rida; a++ )) #Teeb nii palju ridu nagu sisestasime
do
	for (( b=1; b<=$rida; b++ )) #Arvutab m채rke reas
	do
	if [ $a -ge $b ];then
		echo -n "* " #Kui a on v천rdne b-ga siis v채ljastab * nii mitu korda
else
echo -n " "
fi
	done
echo ""
done
